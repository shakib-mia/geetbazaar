# Enable mod_rewrite
RewriteEngine On

# Set base directory (adjust করলে তোমার প্রোজেক্ট রুট ঠিক করে দিতে হবে)
RewriteBase /

# If the request is for index.html, skip rewrite
RewriteRule ^index\.html$ - [L]

# If the requested file or directory exists, serve it as is
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise, redirect all requests to index.html (for client side routing)
RewriteRule . /index.html [L]
